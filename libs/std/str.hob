public import "slice.hob" as slice;
public import "def.hob" as def;

public type Str = slice.Slice.<u8>;

public fun fromCString(raw: *u8) -> Str {
    var length: def.Size = 0;
    while raw[length] != 0 {
        length += 1;
    }
    return new(raw, length);
}

public fun new(raw: *u8, length: def.Size) -> Str {
    return slice.new.<u8>(raw, length) as Str;
}
