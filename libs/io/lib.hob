import std;
import slice;

public type Fd = i32;

extern fun Fd.write(self, ptr: *u8, size: std.def.Size);

public fun Fd.putSlice(self, data: slice.Slice) {
    self.write(data.raw, data.length);
}

public fun Fd.putChar(self, char: u8) {
    self.putSlice(slice.new(&char, 1));
}

public fun out() -> Fd {
    return 1;
}
